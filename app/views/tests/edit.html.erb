<div class="container">
  <h1>Змінити тест</h1>
  <%= form_for @test, url:  {action: "update"} do |form| %>
    <div class="form-group">
      <label for="exampleInputEmail1">Питання тесту</label>
      <%= form.text_field :question, :class => 'form-control' %>
      <small id="emailHelp" class="form-text text-muted">Введіть повну назву testy</small>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Відповідi</label>
      <%= form.text_field :answers, :class => 'form-control' %>
      <small id="emailHelp" class="form-text text-muted">Введіть відповідь</small>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Відповідь</label>
      <%= form.text_field :true_answer, :class => 'form-control' %>
    </div>

    <%= form.submit :class => 'btn btn-success', :value => 'Додати test' %>

  <% end %>
</div>

<h1 class="text-center mb-4 pt-2">Створити нову лекцію</h1>
<%= form_for @lecture, url: lectures_path do |form| %>
  <div class="container">
    <div class="form-group">
      <label for="exampleInputEmail1">Тема:</label>
      <%= form.text_field :theme_name %>
      <small id="emailHelp" class="form-text text-muted">Введіть повну тему лекції</small>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Розділ:</label>
      <%= form.select :subject_theme_id, options_for_select(@themes.collect { |theme| [theme.theme_name.titleize, theme.id] }, 1) %>
      <small id="emailHelp" class="form-text text-muted">Виберіть розділ</small>
    </div>

    <div class="form-group">
      <label for="exampleFormControlTextarea1">Лекція:</label>
      <p><%= form.text_area :text, :rows => '10', :class => 'form-control', :wrap => 'soft | hard' %></p>
    </div>

<!--    <div class="form-group">-->
<!--      <label for="exampleInputEmail1">ID тесту</label>-->
      <%#= form.number_field :test_id %>
<!--      <small id="emailHelp" class="form-text text-muted pb-2">Введіть ІD тесту</small>-->
<!--    </div>-->
    <%= form.submit :class => 'btn btn-success', :value => 'Додати лекцію' %>
  </div>
<% end %>
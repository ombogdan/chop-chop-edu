<h1 class="text-center pt-2">Log in</h1>
<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <form>
      <div class="form-group">
        <div class="row">
          <label for="exampleInputEmail1" class="col-sm-1">Email:</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "col-sm-3 form-control" %>
          <small id="emailHelp" class="form-text text-muted">Ми ніколи не поділимося вашим електронним листом ні з ким
            іншим.</small>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <label for="exampleInputPassword1" class="col-sm-1">Password:</label>
          <%= f.password_field :password, autocomplete: "current-password", :class => "col-sm-3 form-control" %>
        </div>
      </div>
      <div class="form-group form-check">
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :"Запам'ятати мене" %>
          </div>
        <% end %>
      </div>
      <div class="row">
        <div class="col-sm-2">
          <%= f.submit "Ввійти", :class => 'btn btn-outline-success mb-4' %>
        </div>
        <div class="col-sm-3">
          <%= link_to "Забули ваш пароль?", new_password_path(resource_name), :class => 'btn btn-outline-info mb-4' %>
        </div>
        <div class="col-sm-2">
          <%= link_to "Зареєструватися", new_registration_path(resource_name), :class => 'btn btn-outline-secondary' %>
        </div>
      </div>
    </form>
  <% end %>
</div>
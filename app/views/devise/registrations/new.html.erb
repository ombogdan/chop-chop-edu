<h1 class="text-center mt-3">Регістрація</h1>
<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="radio">
      <div class="row">
        <%= f.label :position, 'Позиція', :class => 'position-button col-sm-3' %><br/>
        <div class="input-form">
          <%= f.select(:position, User.positions.keys.map { |position| [position.titleize, position] }) %>
        </div>
      </div>
    </div>

    <div class="field">
      <div class="row mb-2">
        <%= f.label "Фото профіля", :class => 'col-sm-3' %>
        <%= f.file_field :avatar %>
      </div>
    </div>

    <form>
      <div class="form-row">
        <div class="col-md-4 mb-3">
          <label for="exampleInputEmail1">Прізвище</label>
          <%= f.text_field :surname, autofocus: true, autocomplete: 'usersurname', :class => 'form-control' %>
        </div>
        <div class="col-md-4 mb-3">
          <label for="exampleInputEmail1">Ім'я</label>
          <%= f.text_field :name, autofocus: true, autocomplete: 'username', :class => ' form-control' %>
       </div>
        <div class="col-md-4 mb-3">
          <label for="exampleInputEmail1">По-Батькові</label>
          <%= f.text_field :fathername, autofocus: true, autocomplete: 'fathername', :class => 'form-control' %>
        </div>
      </div>
      <div class="form-row">
        <div class="col-md-5 mb-3">
          <label for="exampleInputEmail1">Email</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control' %>
        </div>
        <div class="col-md-3 mb-3">
          <label for="exampleInputEmail1">Номер телефону</label>
          <%= f.text_field :phone, autofocus: true, autocomplete: 'phone', :class => 'form-control' %>
        </div>
        <div class="col-md-3 mb-3">
          <label for="exampleInputEmail1">Назва групи</label>
          <%= f.text_field :groupname, autofocus: true, autocomplete: 'groupname', :class => 'form-control' %>
        </div>
        <div class="col-md-3 mb-3">
          <label for="exampleInputPassword1">Пароль</label>
          <%= f.password_field :password, :plaseholder => "6 characters minimum", :class => 'form-control' %>
        </div>
        <div class="col-md-3 mb-3">
          <label for="exampleInputPassword1">Повторіть пароль</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-control' %>
        </div>
      </div>
      <%= f.submit "Зареєструватись", :class => 'btn btn-primary mt-4' %>
    </form>
    </div>
  <% end %>

<h1 class="text-center mb-4 pt-2">Змінити лабораторну роботу</h1>
<%=  form_for @lab,  url:  {action: "update"} do |form|  %>

  <div class="container">
    <div class="form-group">
      <label for="exampleInputEmail1">Тема:</label>
      <%= form.text_field :theme_name %>
      <small id="emailHelp" class="form-text text-muted">Введіть повну тему лабораторної роботи</small>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Мета:</label>
      <%= form.text_field :goal %>
      <small id="emailHelp" class="form-text text-muted pb-2">Мета</small>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Розділ:</label>
      <%= form.select :subject_theme_id, options_for_select(@themes.collect { |theme| [theme.theme_name.titleize, theme.id] }, 1) %>
      <small class="form-text text-muted pb-2">Виберіть розділ</small>
    </div>

    <div class="form-group">
      <label for="exampleFormControlTextarea1">Лекція</label>
      <%= form.text_area :text, :rows => '10', :class => 'form-control' %>
    </div>

    <%= form.submit :class => 'btn btn-success', :value => 'Змінити лабораторну роботу' %>
  </div>
<% end %>